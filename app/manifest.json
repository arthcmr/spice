{
    "manifest_version": 2,
    "name": "Spice",
    "description": "Spice",
    "version": "0.51",
    "icons": {
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Alt+S",
                "mac": "Alt+S",
                "chromeos": "Alt+S",
                "linux": "Alt+S"
            }
        }
    },
    "background": {
        "scripts": [
            "app.html"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Spice"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "*://*/*",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "styles/main.css",
        "images/microphone.png"
    ]
}